{
    "name": "erwane/cakephp-libs",
    "description": "Erwane CakePHP 3.x Libs",
    "type": "cakephp-plugin",
    "authors": [
        {
            "name": "Erwane Breton",
            "homepage": "https://erwane-breton.fr",
            "email": "erwane@phea.fr"
        }
    ],
    "support": {
        "issues": "https://github.com/Erwane/cakephp-libs/issues"
    },
    "minimum-stability": "stable",
    "require": {
        "php": "^7.2",
        "cakephp/cakephp": "^3.7",
        "ezyang/htmlpurifier": "^4.10"
    },
    "require-dev": {
        "phpunit/phpunit": "^6.5",
        "cakephp/cakephp-codesniffer" : "^3.0",
        "php-parallel-lint/php-parallel-lint": "^1.2",
        "phpro/grumphp": "^1.3"
    },
    "autoload": {
        "psr-4": {
            "Ecl\\": "src"
        }
    },
    "scripts": {
        "cscheck": "vendor/bin/phpcs -p src/",
        "csfix": "vendor/bin/phpcbf src/"
    }
}
