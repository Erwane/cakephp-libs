{
    "name": "erwane/cakephp-libs",
    "description": "Erwane CakePHP Libs",
    "type": "cakephp-plugin",
    "authors": [
        {
            "name": "Erwane Breton",
            "homepage": "https://erwane-breton.fr",
            "email": "erwane@phea.fr"
        }
    ],
    "support": {
        "issues": "https://github.com/Erwane/cakephp-libs/issues"
    },
    "minimum-stability": "stable",
    "require": {
        "php": "^7.2 || ^8.0",
        "cakephp/cakephp": "^4.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.0 || ^8.0",
        "cakephp/cakephp-codesniffer" : "^4.0",
        "php-parallel-lint/php-parallel-lint": "^1.2",
        "phpro/grumphp": "^v1.0"
    },
    "autoload": {
        "psr-4": {
            "Ecl\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Ecl\\Test\\": "tests"
        }
    },
    "scripts": {
        "cscheck": "vendor/bin/phpcs -p src/",
        "csfix": "vendor/bin/phpcbf src/"
    },
    "config": {
        "allow-plugins": {
            "dealerdirect/phpcodesniffer-composer-installer": true,
            "phpro/grumphp": true
        }
    }
}
